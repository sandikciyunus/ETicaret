@model WebUI.Models.CategoryUpdateModel
@{
    ViewData["Title"] = "UpdateCategory";
}


<h1>Product Update</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="UpdateCategory" method="post">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Name</label>
                <div class="col-md-10">
                    <input asp-for="Category.Name" class="form-control" placeholder="Name" />
                    @Html.ValidationMessageFor(p => p.Category.Name, "", new { @class = "text-danger" })
                </div>
            </div>

         

            
            

           

            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" value="Category Update" class="btn btn-success">Category Update</button>
                </div>
            </div>

            <input type="hidden" asp-for="Category.Id" />
        </form>
    </div>
</div>
