@model WebUI.Models.CategoryListViewModel


    <div class="list-group">
        @foreach (var category in Model.Categories)
        {
         
            <a asp-controller="Product"
               asp-action="Index"
               asp-route-id="@category.Id"
               class="list-group-item list-group-item-action @(Model.CurrentCategory==category.Id?"active":"")">
                @category.Name

            </a>

        }
    </div>

    