@model WebUI.Models.ProductDetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid" />
    </div>

    <div class="col-md-9">
        <h1 class="mb-3">
            @Model.Product.Name
        </h1>
        <hr />
     
        @*<a href="#" class="btn btn-link p-0 mb-3">@Model.Product.CategoryId</a>*@
        
    <div class="mb-3">
        <h4 class="text-primary mb-3">
            @Model.Product.Price TL
        </h4>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Cart" asp-action="AddToCart" asp-route-Id="@Model.Product.Id" class="btn btn-primary btn-sm ml-3">Add To Card</a>
        }
    </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p class="p-3">
          @Model.Product.Description
        </p>
    </div>
</div>