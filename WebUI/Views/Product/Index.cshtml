@model WebUI.Models.ProductListViewModel

    <div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item">Telefon</li>
                <li class="list-group-item">Bilgisayar</li>
                <li class="list-group-item">Elektronik</li>
               
            </ul>
            
        </div>


        <div class="col-md-9">
            

            <div class="row">
                
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <img class="card-img-top" src="~/img/@product.ImageUrl" alt="@product.Name">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">@product.Name</a>
                                </h4>
                                <p class="card-text">@product.Price</p>

                            </div>
                            <div class="card-footer text-center">
                                <a href="~/Product/Details/@product.Id" class="btn btn-primary btn-sm ml-3">Details</a>
                                <a href="#" class="btn btn-primary btn-sm ml-3">Add To Card</a>
                            </div>
                        </div>
                </div>
                    }
                    
                </div>
            </div>
    </div>